#include <stdio.h>

void plus();
void minus();
void times();
void devide();
void power();
//void integral();
int main()
{
    char op;
    
    //int start;
    printf("List of operation:\n + (tambah)\n - (kurang)\n * (kali)\n / (bagi)\n ^ (pangkat)\n i (integral polinomial ax^3 - bx^2 + cx + d)\n");
    printf("Operation: ");
    scanf(" %c", &op);
    if (op == '+')
    { plus();
    }
    else if (op == '-')
    { minus();
    }
    else if (op == '*')
    { times();
    }
    else if (op == '/')
    { devide();
    }
    else if (op == '^')
    { power();
    }
    //else if (start == 3)
    //{ integral();
    //}
    return 0;
} void plus()
{   double num1;
    double num2;
    printf("Angka pertama: ");
    scanf("%lf", &num1);
    printf("Angka kedua: ");
    scanf("%lf", &num2);
    printf("%f + %f = %f\n", num1, num2, num1+num2);   
} 
void minus()
{   double num1;
    double num2;
    printf("Angka pertama: ");
    scanf("%lf", &num1);
    printf("Angka kedua: ");
    scanf("%lf", &num2);
    printf("%f - %f = %f\n", num1, num2, num1-num2);  
} 
void power()
{    int base, exp, exp2;
    unsigned long result = 1;
    printf("masukkan basis: ");
    scanf("%d", &base);
    printf("Masukkan eksponen: ");
    scanf("%d", &exp);
    exp2 = exp;
    while (exp != 0) {
        result *= base;
        exp--;
    }
    printf("%d^%d = %lu\n", base, exp2, result);
    
}
void times()
{   double num1;
    double num2;
    printf("Angka pertama: ");
    scanf("%lf", &num1);
    printf("Angka kedua: ");
    scanf("%lf", &num2);
    printf("%f * %f = %f\n", num1, num2, num1*num2);
}
void devide()
{   double num1;
    double num2;
    printf("Angka pertama: ");
    scanf("%lf", &num1);
    printf("Angka kedua: ");
    scanf("%lf", &num2);
    printf("%f / %f = %f\n", num1, num2, num1/num2);

}
